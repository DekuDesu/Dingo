@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-9">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
    <div class="col-md-3 my-2">
        <a class="btn btn-primary my-2" href="./Manage/TwoFactorAuthentication">
            <span class="oi oi-phone mx-1" aria-hidden="true" height="50" width="50"></span>
            Manage 2F Auth
        </a>
        <a class="btn btn-primary my-2" href="./Manage/EnableAuthenticator">
            <span class="oi oi-shield mx-1" aria-hidden="true" height="50" width="50"></span>
            Enable Authenticator
        </a>
        <a class="btn btn-primary my-2" href="./Manage/ChangePassword">
            <span class="oi oi-key mx-1" aria-hidden="true" height="50" width="50"></span>
            Change Password
        </a>
        <a class="btn btn-primary my-2" href="./Manage/Email">
            <span class="oi oi-envelope-closed mx-1" aria-hidden="true" height="50" width="50"></span>
            Update Email
        </a>
        <a class="btn btn-primary my-2" href="./Manage/PersonalData">
            <span class="oi oi-folder mx-1" aria-hidden="true" height="50" width="50"></span>
            Personal Data
        </a>
        <a class="btn btn-warning my-2" href="./Manage/DeletePersonalData">
            <span class="oi oi-warning mx-1" aria-hidden="true" height="50" width="50"></span>
            Delete Account
        </a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
