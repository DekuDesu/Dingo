@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}


<div class="row">
    <div class="col-md-9" style="text-align: center;">
        <h4>@ViewData["Title"]</h4>
        <div class="alert alert-warning" role="alert">
            <p>
                <strong>Deleting this data will permanently delete your account and all of its information.</strong>
            </p>
            <div class=" my-4" style="text-align: center;">
                <p>
                    Want to know how we use and store your information?
                </p>
                <div>
                    <a href="#" class="btn btn-primary">Frequently Asked Questions</a>
                </div>
            </div>
        </div>

        <div>
            <form id="delete-user" method="post" class="form-group">
                <div asp-validation-summary="All" class="text-danger"></div>
                @if (Model.RequirePassword)
                {
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                }
                <button class="btn btn-danger" type="submit">Delete Account</button>
            </form>
        </div>
    </div>

    <partial name="_SettingsNav" model=null />

</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}