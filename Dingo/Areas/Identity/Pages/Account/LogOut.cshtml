@page "/Identity/Account/LogOut"
@using Microsoft.AspNetCore.Components

@inject SignInManager<IdentityUser> signInManager
@inject ILogger<LogoutModel> logger

@model LogoutModel
@{
    ViewData["Title"] = "Logged out";
}
<script>
    redirectPage();
    function sleep(ms) {
        return new Promise(resolve => setTimeout(resolve, ms));
    }
    async function redirectPage() {
        await sleep(2000);
        document.location = "/";
    };
</script>
<header>
    <h1>@ViewData["Title"]</h1>
    <div class="row">
        <div class="spinner-border text-success mx-4" role="status">
            <span class="visually-hidden" hidden="hidden">Loading...</span>
        </div>
        <h2>
            You will be automatically redirected to the home page
        </h2>
    </div>
</header>